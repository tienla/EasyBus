<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_pressed_background" 
    android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relayout_animation" 
            android:orientation="horizontal"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:divider="@drawable/divider_forward_caret"
		    android:showDividers="middle">
        </LinearLayout>

        <TextView
            android:id="@+id/start_end_way"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Tuyen bus so: 1, 2" 
			style="@style/MySmallTextStyle"
			android:textSize="16sp"
		   android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/black" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:padding="5dp">
            
		        <TextView
		            android:id="@+id/total_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="14dp"
		            android:text="-Tong TG"
		            android:textColor="@color/white"
		            android:background="@color/red"
		            android:padding="5dp" />
		        
		        <TextView
		            android:id="@+id/chi_phi"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
					style="@style/MyNormalTextStyle"
					android:textStyle="italic"
					android:gravity="right"
		            android:text="Chi phÃ­: ----d"
		            android:layout_weight="1"/>
        </LinearLayout>

</LinearLayout>

