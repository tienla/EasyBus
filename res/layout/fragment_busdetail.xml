<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llBusContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBusContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/app_name"
                    style="@style/MyLargeBoldTextStyle"
                    android:paddingBottom="@dimen/activity_vertical_margin"/>
            </LinearLayout>
        </ScrollView>
        
        <View android:background="@drawable/divider"
            android:layout_height="2dp"
            android:layout_width="match_parent"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"/>
        <Button
            android:id="@+id/btnViewinMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viewinmap"
            style="@style/MyBoldTextStyle"
            android:textSize="18sp"
            android:drawableLeft="@drawable/btn_map" 
        	android:background="@android:color/transparent"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"/>
        

    </LinearLayout>

</FrameLayout>