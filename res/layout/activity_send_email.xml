<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="1dip"
        android:background="#eee"
        android:id="@+id/button">

        <Button
            android:id="@+id/btn_send"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dip"
            android:background="@drawable/background_btn"
            android:text="Send"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:background="@drawable/background_btn"
            android:text="Cancel"
            android:layout_alignParentRight="true"
            android:textColor="#fff"/>
    </LinearLayout>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/button">
    <TableLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView android:layout_height="40dip"
            android:layout_width="fill_parent"
            android:text="Tuyến số 01"
            android:textSize="10pt"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/ten"/>

        <TableRow
            android:layout_margin="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm đầu"
                android:layout_marginRight="15dip"/>
            <EditText android:layout_height="40dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:id="@+id/diem_dau" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm cuối"
                android:layout_marginRight="15dip"/>
            <EditText android:layout_height="40dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:id="@+id/diem_cuoi" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tần suất hoạt động"
                android:layout_marginRight="15dip"/>
            <EditText android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/tan_suat" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi phí"
                android:layout_marginRight="15dip"/>
            <EditText android:layout_height="40dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:id="@+id/chi_phi" />
        </TableRow>

        <TableRow
            android:layout_margin="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian hoạt động"
                android:layout_marginRight="15dip"/>
            <EditText android:layout_height="80dp"
                android:text="a\na\nag"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:background="@drawable/background_edittext"
                android:id="@+id/thoi_gian"
                android:gravity="top"/>
        </TableRow>

        <TableRow
            android:layout_margin="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lượt đi"
                android:layout_marginRight="15dip"/>
            <EditText android:layout_height="150dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:background="@drawable/background_edittext"
                android:id="@+id/luot_di"
                android:gravity="top"/>
        </TableRow>

        <TableRow
            android:layout_margin="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lượt về"
                android:layout_marginRight="15dip"/>
            <EditText android:layout_height="150dp"
                android:layout_width="fill_parent"
                android:background="@drawable/background_edittext"
                android:inputType="textMultiLine"
                android:layout_weight="1"
                android:gravity="top"
                android:id="@+id/luot_ve"/>
        </TableRow>

        <TableRow
            android:layout_margin="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:layout_marginRight="15dip"/>
            <EditText android:layout_height="150dp"
                android:layout_width="fill_parent"
                android:background="@drawable/background_edittext"
                android:inputType="textMultiLine"
                android:layout_weight="1"
                android:gravity="top"
                android:id="@+id/ghi_chu"/>
        </TableRow>

    </TableLayout>
    </ScrollView>


</RelativeLayout>